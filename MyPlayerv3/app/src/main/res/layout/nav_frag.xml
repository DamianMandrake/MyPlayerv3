<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/darkTwitter"
    >

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:id="@+id/navAppIcon"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/app_name"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/navAppIcon"
        android:id="@+id/navAppName"
        android:textColor="#FFF"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/navAppName"
        android:background="@color/black"
        android:id="@+id/randomView"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navListView"
        android:layout_below="@+id/randomView"

        />



</RelativeLayout>