<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingRight="20dp"
    android:background="@color/lightTwitter"
    >

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialogPlaylistName"
        android:hint="@string/playlist_hint"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:elevation="5dp"


        />




    <android.support.v7.widget.RecyclerView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/dialogRecyclerView"
        android:layout_above="@+id/dialogSearch"
        android:layout_below="@+id/dialogPlaylistName"



        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialogSearch"
        android:layout_alignParentBottom="true"
        android:hint="@string/search_song"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:elevation="5dp"

        />

</RelativeLayout>